<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#f0f0f0"
        android:paddingTop="10dp"
        tools:context=".MainActivity">

    <com.wangpeiyuan.zxingbarcode.demo.BarCodeImageView
            android:id="@+id/ivBarCode"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>
    <Button
            android:id="@+id/btnZBarScanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zbar_scanner"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnZXingScanner"/>
    <Button
            android:id="@+id/btnZXingScanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zxing_scanner"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnScanner"/>
    <Button
            android:id="@+id/btnScanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scanner"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnGenerateQRCode"/>
    <Button
            android:id="@+id/btnGenerateQRCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/generate_qrcode"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>